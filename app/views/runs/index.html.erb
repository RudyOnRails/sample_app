
<div class="container">
<h1>Runs</h1>

  <table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Run Type</th>
      <th>Location</th>
      <th>Start Time</th>
      <th>Pace</th>
      <th>Miles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @runs.each do |run| %>
      <tr>
        <td><%= run.user.try(:email) %></td>
        <td><%= run.Run_Type %></td>
        <td><%= run.Location %></td>
        <td><%= run.Start_Time %></td>
        <td><%= run.Pace %></td>
        <td><%= run.Miles %></td>
        <td><%= link_to 'Show', run %></td>
        <% if run.user == current_user %>
        <td><%= link_to 'Edit', edit_run_path(run) %></td>
        <td><%= link_to 'Destroy', run, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <% if user_signed_in? %>
      <%= link_to 'New Run', new_run_path %>
  <% end %>

</div>